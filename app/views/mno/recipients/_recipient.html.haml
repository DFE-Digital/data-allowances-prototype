%tr.govuk-table__row
  %td.govuk-table__cell.govuk-table__cell--numeric
    = link_to recipient.id, edit_mno_recipient_path(recipient)
  %td.govuk-table__cell.govuk-table__cell--numeric
    = recipient.device_phone_number
  %td.govuk-table__cell
    = recipient.full_name
  %td.govuk-table__cell
    - if recipient.is_account_holder?
      %em
        (recipient)
    - else
      = recipient.account_holder_name
  %td.govuk-table__cell
    = l(recipient.created_at, format: :short)
  %td.govuk-table__cell
    -
  %td.govuk-table__cell
    %input#ids{ type: "checkbox", value: recipient.id, name: "ids[]", checked: (params[:select] == 'all') }
  %td.govuk-table__cell
    = link_to 'Report a problem', mno_recipient_report_problem_path(recipient)
